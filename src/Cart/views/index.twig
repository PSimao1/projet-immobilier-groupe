		<!--============================= Cart Section Start ===============================-->
		<section class="cart padding-y-120">
			<div class="container container-two">
				<div class="row gy-4 justify-content-end">
					<div class="col-lg-12">
						<div class="overflow-auto">
							<div class="card common-card min-w-maxContent">
								<div class="card-body">
									<table class="table style-two">
										<thead>
											<tr>
												<th>Product Details</th>
												<th>Quantity</th>
												<th>Total Price</th>
												<th>Delete</th>
											</tr>
										</thead>
										<tbody>
										<p>{{ cart|length }} elements in cart</p>
											{% for item in cart %}
												<tr>
													<td>
														<div class="d-flex align-items-center gap-3">
															<div class="cart-item__thumb">
																<img src="assets/images/thumbs/property-1.png" alt="">
															</div>
															<div class="cart-item__content">
																<h6 class="cart-item__title fw-500 font-18">
																	<a href="property.html" class="link">{{ item.title }}</a>
																</h6>
																<p class="property-item__location d-flex gap-2 font-14">
																	<span class="icon text-gradient">
																		<i class="fas fa-map-marker-alt"></i>
																	</span>
																	{{ item.adress }}
																	{{ item.city }}
																	{{ item.zip_code }}
																</p>
																<span class="cart-item__price">Price:
																	<span class="fw-500 text-heading">{{ item.price }}</span>
																</span>
															</div>
														</div>
													</td>
													<td>
														<div class="cart-item__count">
															<button data-decrease="data-decrease">
																<i class="fas fa-minus"></i>
															</button>
															<input data-value="data-value" type="number" value="1">
															<button data-increase="data-increase">
																<i class="fas fa-plus"></i>
															</button>
														</div>
													</td>
													<td>
														<h6 class="cart-item__totalPrice font-16 fw-500 mb-0">{{ item.total_price }}</h6>
													</td>
													<td>
														<button type="button" class="rounded-btn delete-btn  text-danger bg-danger bg-opacity-10 flex-shrink-0">
															<i class="fas fa-trash-alt"></i>
														</button>
													</td>
												</tr>
											{% endfor %}
										</tbody>
									</table>
									<div class="mt-5 d-flex align-items-center gap-4 justify-content-between">
										<div class="d-flex align-items-center gap-3">
											<input type="text" class="common-input flex-grow-1" placeholder="Coupon Code">
											<button type="button" class="btn btn-main flex-shrink-0">
												Apply Coupon
											</button>
										</div>
										<button type="button" class="btn btn-outline-main bg-white flex-shrink-0">
											Update Cart
										</button>
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="col-lg-4">
						<div class="card common-card">
							<div class="card-body">
								<h6 class="title mb-4">Cart Totals</h6>
								<ul class="billing-list">
									{% for item in cart %}
										<li class="billing-list__item flx-between">
											<span class="text text-poppins font-15">{{ item.title }}</span>
											<span class="amount fw-semibold text-heading text-poppins">{{ item.total_price }}</span>
										</li>
									{% endfor %}
									<li class="billing-list__item flx-between">
										<span class="text text-poppins fw-semibold text-heading">Order Total</span>
										<span class="amount fw-semibold text-heading text-poppins">
											510.15</span>
									</li>
									
								</ul>
								<button type="submit" class="btn btn-main w-100 mt-4">Proceed To Checkout</button>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
		<!-- =========================== Cart Section End ===================== -->

