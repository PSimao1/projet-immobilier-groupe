{% extends "@admin/layout.twig" %}

{% block body %}

    <p class="text-right">
        <a href="{{ path(routePrefix ~ '.create') }}" class = "btn btn-primary">
            Ajouter un article
        </a>
    </p>

    <table class="table table-stripped">
        <thead>
        <tr>
            <td>Titre</td>
            <td>Ville</td>
            <td>Description</td>
        </tr>
        </thead>

        <tbody>
        {% for item in items %}
            <tr>
                <td>{{ item.title }}</td>
                <td>{{ item.city }}</td>
                <td>{{ item.description }}</td>
                <td>
                    <a href="{{ path(routePrefix ~'.edit', {id:item.id}) }}" class="btn btn-primary">Editer</a>
                    <form style="display: inline" action="{{ path(routePrefix ~ '.delete', {id:item.id}) }}" method="POST" id="tata">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-danger">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>

    </table>

    {{ paginate(items, routePrefix ~ '.index') }}

{% endblock %}